<div id="distributions-list-wrapper">
<div class="row distributions-list-header">
  <div class="col-lg-12">
    <div class="panel-body">
      <div class="row">
        <div class="col-lg-12 distributions-header">
          <h2 class="font-light m-b-xs">
          Employees distribution
          </h2>
          <div class="toggle-sales-wrapper" data-tour-step="show-sales">
            <input type="checkbox" class="toggle-sales"> Sales
          </div>
          <div class="toggle-tip-outs-wrapper" data-tour-step="show-tip-outs">
            <input type="checkbox" class="toggle-tip-outs"> Show tip outs
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row" id='distributions-list' data-tip-outs-shown='false' data-sales-shown='false'>
  <div class="col-lg-12">
    <% @calculation_employees.each do |position_type_key, position_type_hash| %>
      <div class="position-block" data-position-block-name='<%= position_type_hash[:position_type_name] %>'  data-position-block-id='<%= position_type_hash[:position_type_id] %>'>
        <% team_count = position_type_hash[:position_type_is_a_source] && @calculation.teams_quantity > 1 ? @calculation.teams_quantity : 1 %>
        <% team_count.times do |team_no| %>
          <%= render partial: "dashboard/calculation/employees_dist_table", locals: {
          team_no: team_no + 1,
          team_count: team_count,
          position_type_hash: position_type_hash
          } if position_type_hash[:employees].any? %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
</div>