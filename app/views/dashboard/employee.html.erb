<div id="employee-view">
  <br>
  <div class="row">
    <div class="col-lg-12">
      <div class="col-lg-12">
        <div class="hpanel">
          <div class="panel-body">
            <h2 class="font-light m-b-xs">
            Employees
            </h2>
            <small>Enter all Employees for Each Position</small>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div id="positions-list" class="col-lg-12">
      <!-- Positions inserted here -->
    </div>
  </div>
  <div class="modal fade import-employees-wrapper" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Select position type to import employees from</h4>
      </div>
      <div class="modal-body">
        <% @restaurant.position_types.each_with_index do |f, i| %>
          <div class="radio import-position">
            <input type="radio" class="toggle-tip-outs" name="source_position_type" id="radio<%= i %>"  value="<%= f.id %>"> <label for="radio<%= i %>"><%= f.name %></label>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-success" data-emp-action="import-start">Import</button>
      </div>
    </div>
  </div>

  <!-- App styles -->
  <link rel="stylesheet" href="fonts/pe-icon-7-stroke/css/pe-icon-7-stroke.css" />
  <link rel="stylesheet" href="fonts/pe-icon-7-stroke/css/helper.css" />

  <!-- <table id="example2" class="table table-striped table-bordered table-hover"> -->

</div>
