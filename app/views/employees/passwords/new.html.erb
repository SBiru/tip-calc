<div class="login-container">
  <div class="row">
    <div class="col-md-12">
      <div class="text-center m-b-md">
        <h3>Forgot your password?</h3>
      </div>
      <div class="hpanel">
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: employee_password_path, html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>

          <% flash.each do |key, value| %>
          <div class="<%= flash_class(key) %> fade in">
            <%= value %>
          </div>
          <% end %>

          <div class="field form-group">
            <%= f.label :email, class: "control-label" %><br />
            <%= f.email_field :email, autofocus: true, placeholder: "example@gmail.com", title: "Please enter you username", required: "", value: "", class: "form-control" %>
          </div>
          <div class="actions form-group">
            <%= f.submit "Send me reset password instructions", class: "btn btn-success btn-block" %>
          </div>
          <%= render "employees/shared/links" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
