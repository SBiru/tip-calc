<div class="login-container">
  <div class="row">
    <div class="col-md-12">
      <div class="text-center m-b-md">
          <h3>Edit profile</h3>
      </div>
      <div class="hpanel">
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: employee_registration_path(resource_name).sub(/\.[\w]*\z/, ''), html: { method: :put }) do |f| %>
            <%= devise_error_messages! %>

            <div class="field form-group">
              <%= f.label :email, class: "control-label" %><br />
              <%= f.email_field :email, autofocus: true, placeholder: "example@gmail.com", title: "Please enter you username", required: "", value: current_employee.try(:email), class: "form-control" %>
            </div>

            <div class="field form-group">
              <%= f.label :last_name, class: "control-label" %><br />
              <%= f.text_field :last_name, autofocus: true, placeholder: "John Doe", title: "Please enter your last name", required: "", value: current_employee.try(:last_name), class: "form-control" %>
            </div>

            <div class="field form-group">
              <%= f.label :first_name, class: "control-label" %><br />
              <%= f.text_field :first_name, autofocus: true, placeholder: "John Doe", title: "Please enter your first name", required: "", value: current_employee.try(:first_name), class: "form-control" %>
            </div>

            <div class="field form-group">
              <%= f.label :password, class: "control-label" %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", title: "Please enter your password", placeholder: "******", value: "", class: "form-control" %>
            </div>

            <div class="field form-group">
              <%= f.label :password_confirmation, class: "control-label" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", title: "Please enter your password", placeholder: "******", value: "", name: "password", class: "form-control" %>
            </div>

            <div class="field form-group">
              <%= f.label :current_password, class: "control-label" %> <i>(we need your current password to confirm your changes)</i><br />
              <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
            </div>

            <div class="actions form-group">
              <%= f.submit "Update", class: "btn btn-success btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
